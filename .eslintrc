{
	"extends": ["prettier"],
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": ["error", { "singleQuote": true }]
	},
	"ignorePatterns": ["!.eleventy.js"],
	"parserOptions": {
		"requireConfigFile": false,
		"ecmaVersion": "latest",
		"sourceType": "module",
		"babelOptions": {
			"plugins": ["@babel/plugin-syntax-import-assertions"]
		}
	},
	"parser": "@babel/eslint-parser"
}
